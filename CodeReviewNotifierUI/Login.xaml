        <Image Height="31" HorizontalAlignment="Left" Margin="232,119,0,0" Name="image2" Source="/CodeReviewNotifierUI;component/Image/username_icon.png" Stretch="Fill" VerticalAlignment="Top" Width="33" />
        <Image Height="31" HorizontalAlignment="Left" Margin="232,183,0,0" Name="image3" Source="/CodeReviewNotifierUI;component/Image/pw_icon.png" Stretch="Fill" VerticalAlignment="Top" Width="33" />
    </Grid>
