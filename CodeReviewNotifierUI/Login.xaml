        <Label Height="45" HorizontalAlignment="Left" Margin="223,177,0,0" Name="PasswordLabel" VerticalAlignment="Top" Background="#FF40C7DA" Width="285" />
        <TextBox Height="34" HorizontalAlignment="Left" Margin="271,118,0,0" Name="Username" VerticalAlignment="Top" Width="229" FontSize="18" Background="#FFDCEED4" />
